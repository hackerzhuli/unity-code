{
  "name": "unitycode",
  "displayName": "Unity Code",
  "description": "VS Code extension that helps you to work with Unity Projects",
  "version": "0.1.0",
  "type": "module",
  "publisher": "hackerzhuli",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:ProjectSettings/ProjectVersion.txt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeunity.renameMetaFiles",
        "title": "CodeUnity: Rename Meta Files"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "npm run compile && npx mocha out/test/suite/*.test.js",
    "compile": "tsc",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "esm": "^3.2.25",
    "esmock": "^2.7.0",
    "globals": "^16.2.0",
    "mocha": "^11.7.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
