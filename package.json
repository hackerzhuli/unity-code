{
  "name": "unity-code",
  "displayName": "Unity Code",
  "description": "VS Code extension that helps you to work with Unity Projects",
  "version": "0.1.0",
  "publisher": "hackerzhuli",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackerzhuli/unity-code.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "extensionDependencies": [
    "nromanov.dotrush"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:ProjectSettings/ProjectVersion.txt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "icons": {
      "unity-cube": {
        "description": "Unity Cube Icon",
        "default": {
          "fontPath": "./assets/icons.woff",
          "fontCharacter": ""
        }
      },
      "hot-reload": {
        "description": "Hot Reload Icon",
        "default": {
          "fontPath": "./assets/icons.woff",
          "fontCharacter": ""
        }
      }
    },
    "commands": [
      {
        "command": "unity-code.refreshTests",
        "title": "Unity Code: Refresh Tests"
      },
      {
        "command": "unity-code.showUnityLogs",
        "title": "Unity Code: Show Unity Logs"
      },
      {
        "command": "unity-code.showUnityConsole",
        "title": "Unity Code: Show Unity Console"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "unityConsoleContainer",
          "title": "Unity Console",
          "icon": "$(unity-cube)"
        }
      ]
    },
    "views": {
      "unityConsoleContainer": [
        {
          "type": "webview",
          "id": "unityConsole",
          "name": "Unity Console",
          "when": "unity-code:hasUnityProject"
        }
      ]
    },
    "breakpoints": [
      {
        "language": "csharp"
      }
    ],
    "debuggers": [
      {
        "type": "unity-code",
        "languages": [
          "csharp"
        ],
        "label": "Unity Code Debugger",
        "program": "./bin/win_x64/MonoDebugger.exe",
        "configurationAttributes": {
          "attach": {
            "required": [],
            "properties": {
              "cwd": {
                "type": "string",
                "description": "Working directory for the debugger",
                "default": "${workspaceFolder}"
              },
              "debuggerOptions": {
                "type": "object",
                "description": "Additional debugger options"
              },
              "transportId": {
                "type": "string",
                "description": "Transport ID for external type resolver"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Unity Code Attach",
            "type": "unity-code",
            "request": "attach"
          }
        ],
        "configurationSnippets": [
          {
            "label": "Unity Code: Attach",
            "description": "Attach to Unity Editor",
            "body": {
              "name": "Unity Code Attach",
              "type": "unity-code",
              "request": "attach",
              "cwd": "${workspaceFolder}"
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "Unity Code",
      "properties": {
        "unity-code.autoRefreshAssetDatabase": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable automatic Unity asset database refresh when assets are saved or scripts are created/deleted, this will be automatically disabled if Hot Reload for Unity is running"
        },
        "unity-code.debugger.stepOverPropertiesAndOperators": {
          "type": "boolean",
          "default": true,
          "description": "Step over properties and operators when debugging Unity code"
        },
        "unity-code.debugger.projectAssembliesOnly": {
          "type": "boolean",
          "default": true,
          "description": "Only debug project assemblies, excluding Unity engine and third-party libraries"
        },
        "unity-code.ignoreDuplicateLogs": {
          "type": "boolean",
          "default": true,
          "description": "Ignore duplicate logs in Unity Console (logs with exactly the same content including stack trace)"
        },
        "unity-code.assetDatabaseRefreshDelay": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 60,
          "description": "Minimum delay in seconds between Unity asset database refreshes to prevent overwhelming Unity Editor with frequent refresh requests (1-60 seconds)"
        }
      },
      "testing": {
        "providers": [
          {
            "id": "unityTests",
            "label": "Unity Tests"
          }
        ]
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "npm run compile && npx mocha out/test/suite/*.test.js",
    "compile": "tsc",
    "watch": "tsc -watch -p ./",
    "clean": "rimraf out",
    "build": "npm run clean && npm run compile && vsce package"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "esm": "^3.2.25",
    "esmock": "^2.7.0",
    "globals": "^16.2.0",
    "mocha": "^11.7.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
