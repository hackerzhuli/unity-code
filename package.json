{
  "name": "unitycode",
  "displayName": "Unity Code",
  "description": "VS Code extension that helps you to work with Unity Projects",
  "version": "0.1.0",
  "type": "module",
  "publisher": "hackerzhuli",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackerzhuli/unity-code.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:ProjectSettings/ProjectVersion.txt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "unitycode.refreshTests",
        "title": "Unity Code: Refresh Tests"
      },
      {
        "command": "unitycode.showUnityLogs",
        "title": "Unity Code: Show Unity Logs"
      },
      {
        "command": "unitycode.showUnityConsole",
        "title": "Unity Code: Show Unity Console"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "unityConsole",
          "name": "Unity Console",
          "when": "unitycode:hasUnityProject"
        }
      ]
    },
    "configuration": {
      "title": "Unity Code",
      "properties": {
        "unitycode.autoRefreshUnity": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable automatic Unity asset database refresh when assets are saved, this will be automatically disabled if Hot Reload for Unity is running"
        },
        "unitycode.refreshOnWindowFocus": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh Unity tests when VS Code window regains focus"
        },
        "unitycode.showUnityLogs": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Unity log messages forwarding to VS Code Output Channel"
        }
      },
      "testing": {
        "providers": [
          {
            "id": "unityTests",
            "label": "Unity Tests"
          }
        ]
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "npm run compile && npx mocha out/test/suite/*.test.js",
    "compile": "tsc",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@types/find-process": "^1.1.0",
    "csv-parse": "^5.6.0",
    "fast-xml-parser": "^5.2.5",
    "find-process": "^1.4.10",
    "yargs-parser": "^22.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.100.0",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "esm": "^3.2.25",
    "esmock": "^2.7.0",
    "globals": "^16.2.0",
    "mocha": "^11.7.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
